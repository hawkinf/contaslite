{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "finance_app (Windows)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "deviceId": "windows",
      "args": ["--dart-define=FLUTTER_WEB_USE_SKIA=true"]
    },
    {
      "name": "finance_app (Windows Release)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "deviceId": "windows",
      "flutterMode": "release"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ðŸ“¸ Project Snapshots (30 min intervals)",
      "program": "${workspaceFolder}/.vscode/snapshot.js",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
