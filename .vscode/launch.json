{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ContasLite (Windows Debug)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "deviceId": "windows",
      "cwd": "${workspaceFolder}",
      "flutterRunAdditionalArgs": ["--no-track-widget-creation"],
      "evaluateGettersInDebugViews": false,
      "evaluateToStringInDebugViews": false
    },
    {
      "name": "ContasLite (Windows Run - No Debug)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "deviceId": "windows",
      "cwd": "${workspaceFolder}",
      "noDebug": true
    },
    {
      "name": "ContasLite (Windows Release)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "deviceId": "windows",
      "flutterMode": "release",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "ContasLite (Windows Profile)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "deviceId": "windows",
      "flutterMode": "profile",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ðŸ“¸ Project Snapshots (30 min intervals)",
      "program": "${workspaceFolder}/.vscode/snapshot.js",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
