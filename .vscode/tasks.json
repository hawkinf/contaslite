{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üì∏ Start Project Snapshots",
      "type": "shell",
      "command": "node",
      "args": [".vscode/snapshot.js"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Project Snapshot Service Iniciado.*$",
          "endsPattern": "^.*Pr√≥ximo snapshot em.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "close": false
      }
    },
    {
      "label": "üìã List All Snapshots",
      "type": "shell",
      "command": "node",
      "args": [".vscode/snapshot.js", "list"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "üóëÔ∏è Cleanup Old Snapshots",
      "type": "shell",
      "command": "node",
      "args": [".vscode/snapshot.js", "cleanup"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "üì∏ Create Quick Snapshot",
      "type": "shell",
      "command": "powershell",
      "args": ["-ExecutionPolicy", "Bypass", "-NoProfile", "-File", "${workspaceFolder}/b.ps1"],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      },
      "problemMatcher": []
    }
  ]
}
